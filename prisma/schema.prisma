datasource db {
  provider = "sqlite"
  url      = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Offer {
  id        Int     @id @default(autoincrement())
  firstName String?
  lastName  String?
  email     String
  phone     String
  message   String
  completed Boolean @default(false)
}

